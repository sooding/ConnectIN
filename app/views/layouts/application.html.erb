<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= render 'layouts/stylesheets' %> 
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
	<body>
		<header class="navbar navbar-fixed-top">		
	  <div class="navbar-inner">
	           <div class="container">
	          	<nav style = "height: 50px; padding:0px; margin:0px; display: inline;">
	          		<b style = "font-size: 20px;">
	          			<%= link_to "ConnectIN", root_path %>
	          		</b>
	          		<br />
	     			Great Professionals link with Great Projects


	            <ul class="nav pull-right">
			    	<li><% if !current_page?('/') %>
			    		<%= link_to "Back", root_path %></li>
			    	<%end%>
	        	<% if signed_in? %>
	        	<li class="dropdown" id="menu1">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Account<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to "Search", companies_search_path %></li>
						<li class="divider"></li>
						<li><%= link_to "Profile", current_company %></li>

						<li><%=link_to "Sign out", companies_signout_path, method: "delete" %></li>
					</ul>
					</li>
					<li><%=link_to "Sign out", companies_signout_path %></li>
				<% end %>


                <% if csigned_in? %>
                <li class="dropdown" id="menu1">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Account<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to "List Companies", showAllCompany_path %></li>
						<li><%= link_to "Search", contractors_search_path %></li>
						<li class="divider"></li>
						<li><%= link_to "Profile",current_contractor %></li>		                    
			        	<li><%=link_to "Sign out", contractors_signout_path, method: "delete" %></li>
					</ul>
					</li>
					<li><%=link_to "Sign out", contractors_signout_path %></li>
				<% end %>  	
	            </ul>
		    </nav>
	   
	        </div>
	      </div>
	  </header>

      <div class="container">
      	<%flash.each do |key, value| %>
			  <div class="alert alert-<%= key %>"><%= value %></div>
		  <% end %>
		  
      	<div class = "relative">
			<%= yield %>
		</div>
      </div>
      <br />
      <footer><br /><b><%= link_to "About Us", '#' %></b> |
      	<b><%= link_to "Help", '#' %></b></footer>
	</body>
</html>
