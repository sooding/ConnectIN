<div class ="hero-unit" >
<h2>Complete your profile</h2>

<%= form_for(profile, html: { multipart:true } ) do |f| %> 
 <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
  <%= f.label :description, "What would you like to say about yourself?" %><br />
   <%= f.text_area :description, cols: 30, rows:6 %>
  </div>
<div class="field">
    <% if restaurant.image.file? %>
      <%= image_tag restaurant.image.url(:main) %><br />
      <%= f.label :image, "Change photo of your restaurant (at least 600x400px)" %><br />
    <% else %>
      <%= f.label :image, "Add a photo of your restaurant (at least 600x400px)" %><br />
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit signup_message %>
  </div>
<% end %>
</div>
